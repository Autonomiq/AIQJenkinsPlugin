<f:optionalBlock inline="true" field="runTestCases" title="${%RunTestCases}" >

        <f:entry title="${%Platform}" field="platform">
            <select>
                <option value="Linux">Linux</option>
                <option value="Windows">Windows</option>
            </select>
        </f:entry>

    </f:optionalBlock>

    <f:optionalBlock inline="true" field="runTestCases" title="${%RunTestCases}" >

        <f:entry title="${%Platform}" field="platform">
            <select default="Linux" >
                <option value="Linux" selected="${instance.platform=='Linux'}" >Linux</option>
                <option value="Windows" selected="${instance.platform=='Windows'}" >Windows</option>
            </select>
        </f:entry>

        <f:entry title="${%Browser}" field="browser">
            <select>
                <option value="Chrome" selected="${instance.browser=='Chrome'}" >Chrome</option>
                <option value="Firefox" selected="${instance.browser=='Firefox'}" >Firefox</option>
            </select>
        </f:entry>

    </f:optionalBlock>


checked="${it.genScripts}"

checked="${instance.runTestCases}"
